<p id="notice"><%= notice %></p>

<h1>Service Prices</h1>

<table>
  <thead>
    <tr>
      <th>Basic price</th>
      <th>Bussiness price in percentage</th>
      <th>First class price in percentage</th>
      <th>Flight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_prices.each do |service_price| %>
      <tr>
        <td><%= service_price.basic_price %></td>
        <td><%= service_price.bussiness_price_in_percentage %></td>
        <td><%= service_price.first_class_price_in_percentage %></td>
        <td><%= service_price.flight_id %></td>
        <td><%= link_to 'Show', service_price %></td>
        <td><%= link_to 'Edit', edit_service_price_path(service_price) %></td>
        <td><%= link_to 'Destroy', service_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

